#! /bin/bash

if [ "$1" = "minified" ]
then
  suffix=".min"
else
  suffix=""
fi

root=$(pwd)
mkdir -p ${root}/css
mkdir -p ${root}/fonts
mkdir -p ${root}/js
mkdir -p ${root}/lua
mkdir -p ${root}/deps

export root
export suffix

cd deps
for script in *.sh
do
  echo "Installing ${script}..."
  . ./${script}
done
cd ..

# Add files to .gitignore:
echo "*.swp"       > .gitignore
echo "*~"         >> .gitignore
echo ""           >> .gitignore
echo "fonts/"     >> .gitignore
find css -type l  >> .gitignore
find js  -type l  >> .gitignore
find lua -type l  >> .gitignore
for dir in deps/*
do
  if [ -d ${dir} ]
  then
    echo ${dir}   >> .gitignore
  fi
done
